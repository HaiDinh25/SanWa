<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:colorControlNormal">@color/colorClickedAnim</item>
        <item name="android:progressTint">@color/colorSigningBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="RatingBarReview" parent="Theme.AppCompat">
        <item name="android:colorControlNormal">@color/colorClickedAnim</item>
        <item name="android:progressTint">@color/colorSigningBackground</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1</item>
        <item name="android:background">@color/colorClickedAnim</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:buttonTint">@color/bg_check_box</item>
    </style>

    <style name="DialogBotToTopAnim">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="LinearLayoutVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LayoutMaxSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutSettingDictionary" parent="LayoutMaxSize">
        <item name="android:layout_height">@dimen/dimen_30</item>
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="BookCover">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabTextColor">@color/colorTextPrimary</item>
    </style>

    <style name="SpinnerShoppingCart">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:background">@drawable/bg_edt_sign_in</item>
    </style>

    <style name="TextViewNormalWrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorTextBlur</item>
    </style>

    <style name="TextViewBoldWrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextViewTitleInContentDictionary" parent="TextViewBoldWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_30</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextViewHeaderInBottomSheet" parent="TextViewBoldWrapContent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="EditTextInDictionary">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="textColor">@color/colorTextPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="EditTextContentInDictionary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dimen_30</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextBoldInDictionary" parent="TextViewBoldWrapContent">
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
        <item name="textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextViewError" parent="TextViewNormalWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_smaller</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">16dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="zoom_2">
        <item name="android:windowEnterAnimation">@anim/zoom_out_2</item>
        <item name="android:windowExitAnimation">@anim/zoom_in_2</item>
    </style>

    <style name="AuthenticationButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/bg_button_inactive</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AuthenticationTextInputEdtText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AuthenticationTextInPutLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_50</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="RegisterTextView">
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegisterEditTextPass" parent="AuthenticationTextInputEdtText">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_margin">@dimen/dimen_1</item>
        <item name="android:maxLength">60</item>
    </style>

    <style name="BookStoreButtonMore" parent="TextViewNormalWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@color/colorTextMore</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:text">@string/book_store_more</item>
    </style>

    <style name="BookDetailTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="maxLines">1</item>
    </style>

    <style name="BookDetailButtonMatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:background">@drawable/bg_button_red_border</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BookDetailButtonSplitWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:background">@drawable/bg_button_red_border</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BookReviewTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="textStyle">bold</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="RecycleViewItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MoreTextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="MoreTextViewMenuTitle" parent="MoreTextViewTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="drawableEndCompat">@drawable/ic_more</item>
    </style>

    <style name="MoreImageView">
        <item name="android:layout_width">@dimen/dimen_20</item>
        <item name="android:layout_height">@dimen/dimen_20</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <style name="ImageInHeaderBottomSheet">
        <item name="android:layout_width">@dimen/dimen_35</item>
        <item name="android:layout_height">@dimen/dimen_35</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="ImageInDictionaryContent">
        <item name="android:layout_width">@dimen/dimen_30</item>
        <item name="android:layout_height">@dimen/dimen_30</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:src">@drawable/ic_reading_sound</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="PurchaseHistoryTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextInContact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:background">@drawable/bg_edt_sign_in</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="EditTextInSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:background">@drawable/bg_edt_password</item>
        <item name="android:textColorHint">@color/colorSearchBorder</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ImageViewInSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ImageVoiceInDictionary">
        <item name="android:layout_width">@dimen/dimen_30</item>
        <item name="android:layout_height">@dimen/dimen_30</item>
        <item name="android:padding">@dimen/dimen_5</item>
        <item name="android:src">@drawable/ic_reading_sound</item>
    </style>

    <style name="ImageInConfigText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ButtonInDialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_10dp_corner</item>
    </style>

    <style name="ButtonInHeaderReading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="SeekBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:max">4</item>
        <item name="android:progressBackgroundTint">@color/colorIcon</item>
        <item name="android:padding">@dimen/padding_medium</item>
<!--        <item name="android:progressTint">@color/colorAccent</item>-->
        <item name="android:thumbTint">@color/colorAccent</item>
        <item name="android:tickMark">@drawable/tickmark</item>
        <item name="android:tickMarkTint">@color/colorAccent</item>
        <item name="android:progress">2</item>
    </style>

    <style name="SeekBarValue">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextViewInSettingAuth" parent="TextViewBoldWrapContent">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="SwitchButtonInSettingAuth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_30</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:elevation">@dimen/elevation_8dp</item>
        <item name="sb_checked_color">@color/colorAccent</item>
    </style>

</resources>