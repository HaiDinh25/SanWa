<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        style="@style/LinearLayoutVertical"
        android:padding="@dimen/padding_medium">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcMyBookReview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnRequestBook" />

        <Button
            android:id="@+id/btnRequestBook"
            style="@style/AuthenticationButton"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/bg_button_authentication"
            android:enabled="true"
            android:text="@string/request_book_button_request"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</layout>
