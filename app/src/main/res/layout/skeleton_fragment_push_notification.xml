<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutVertical"
    android:padding="@dimen/padding_medium"
    tools:context=".base.SWMainActivity">

    <RelativeLayout style="@style/LinearLayoutHorizontal">

        <LinearLayout
            style="@style/LinearLayoutVertical"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_toStartOf="@id/switchAccount">

            <TextView
                style="@style/TextViewBoldWrapContent"
                android:layout_width="match_parent"
                android:background="@drawable/bg_skeleton_conner_small" />

            <TextView
                style="@style/TextViewNormalWrapContent"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/bg_skeleton_conner_small" />

        </LinearLayout>

        <TextView
            android:id="@+id/switchAccount"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_skeleton_conner_small" />

    </RelativeLayout>

</LinearLayout>
