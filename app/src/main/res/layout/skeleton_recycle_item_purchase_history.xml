<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small">

    <LinearLayout style="@style/LinearLayoutVertical">

        <RelativeLayout style="@style/LinearLayoutHorizontal">

            <TextView
                style="@style/TextViewBoldWrapContent"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/margin_larger"
                android:layout_toStartOf="@id/tvOrderPaid"
                android:background="@drawable/bg_skeleton_conner_small" />

            <TextView
                android:id="@+id/tvOrderPaid"
                style="@style/RecycleViewItemTitle"
                android:layout_width="@dimen/dimen_80"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_skeleton_conner_small" />

        </RelativeLayout>

        <LinearLayout
            style="@style/LinearLayoutHorizontal"
            android:layout_marginTop="@dimen/margin_small">

            <TextView
                style="@style/TextViewNormalWrapContent"
                android:layout_width="@dimen/dimen_150"
                android:background="@drawable/bg_skeleton_conner_small"
                android:padding="@dimen/padding_small" />

            <TextView
                style="@style/TextViewBoldWrapContent"
                android:layout_width="@dimen/dimen_100"
                android:layout_marginStart="@dimen/margin_large"
                android:background="@drawable/bg_skeleton_conner_small"
                android:padding="@dimen/padding_small" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutHorizontal"
            android:layout_marginTop="@dimen/margin_small">

            <TextView
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_120"
                android:background="@drawable/bg_skeleton_conner_medium" />

            <RelativeLayout
                style="@style/LinearLayoutVertical"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_medium"
                android:orientation="vertical"
                android:padding="@dimen/padding_smaller">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/TextViewBoldWrapContent"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/margin_larger"
                    android:background="@drawable/bg_skeleton_conner_small" />

                <TextView
                    android:id="@+id/tvAuthor"
                    style="@style/TextViewNormalWrapContent"
                    android:layout_width="@dimen/dimen_150"
                    android:layout_below="@id/tvTitle"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@drawable/bg_skeleton_conner_small" />

                <TextView
                    android:id="@+id/tvUser"
                    style="@style/TextViewNormalWrapContent"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_skeleton_conner_small" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>