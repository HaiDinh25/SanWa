<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        style="@style/LinearLayoutVertical"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_small">

        <RelativeLayout
            style="@style/LinearLayoutVertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layoutCheckAll"
                style="@style/LinearLayoutHorizontal"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:id="@+id/checkAll"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_skeleton_conner_small" />

                <TextView
                    style="@style/TextViewBoldWrapContent"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_toEndOf="@id/checkAll"
                    android:background="@drawable/bg_skeleton_conner_small" />

                <TextView
                    android:id="@+id/btnEmpty"
                    style="@style/TextViewNormalWrapContent"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_skeleton_conner_small" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutCheckAll"
                android:orientation="horizontal">

                <View
                    style="@style/View"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:background="@color/colorSkeleton" />

                <LinearLayout
                    android:id="@+id/container"
                    style="@style/LinearLayoutHorizontal"
                    android:layout_margin="@dimen/padding_medium"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:id="@+id/checkBox"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_skeleton_conner_small" />

                    <TextView
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_100"
                        android:layout_marginStart="@dimen/margin_small"
                        android:background="@drawable/bg_skeleton_conner_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_small"
                        android:padding="@dimen/margin_small">

                        <TextView
                            android:id="@+id/tvName"
                            style="@style/TextViewBoldWrapContent"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_skeleton_conner_small" />

                        <TextView
                            android:id="@+id/tvAuthor"
                            style="@style/TextViewNormalWrapContent"
                            android:layout_width="@dimen/dimen_150"
                            android:layout_below="@id/tvName"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_skeleton_conner_small" />

                        <RelativeLayout
                            style="@style/LinearLayoutHorizontal"
                            android:layout_width="match_parent"
                            android:layout_alignParentBottom="true">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="@style/RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/margin_small" />

                            <TextView
                                android:id="@+id/tvPrice"
                                style="@style/TextViewBoldWrapContent"
                                android:layout_width="@dimen/dimen_80"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/bg_skeleton_conner_small" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"
                android:orientation="horizontal">

                <View
                    style="@style/View"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:background="@color/colorSkeleton" />

                <LinearLayout
                    android:id="@+id/container2"
                    style="@style/LinearLayoutHorizontal"
                    android:layout_margin="@dimen/padding_medium"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:id="@+id/checkBox2"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_skeleton_conner_small" />

                    <TextView
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_100"
                        android:layout_marginStart="@dimen/margin_small"
                        android:background="@drawable/bg_skeleton_conner_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_small"
                        android:padding="@dimen/margin_small">

                        <TextView
                            android:id="@+id/tvName2"
                            style="@style/TextViewBoldWrapContent"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_skeleton_conner_small" />

                        <TextView
                            android:id="@+id/tvAuthor2"
                            style="@style/TextViewNormalWrapContent"
                            android:layout_width="@dimen/dimen_150"
                            android:layout_below="@id/tvName2"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_skeleton_conner_small" />

                        <RelativeLayout
                            style="@style/LinearLayoutHorizontal"
                            android:layout_width="match_parent"
                            android:layout_alignParentBottom="true">

                            <RatingBar
                                android:id="@+id/ratingBar2"
                                style="@style/RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/margin_small" />

                            <TextView
                                android:id="@+id/tvPrice2"
                                style="@style/TextViewBoldWrapContent"
                                android:layout_width="@dimen/dimen_80"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/bg_skeleton_conner_small" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2"
                android:orientation="horizontal">

                <View
                    style="@style/View"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:background="@color/colorSkeleton" />

                <LinearLayout
                    android:id="@+id/container3"
                    style="@style/LinearLayoutHorizontal"
                    android:layout_margin="@dimen/padding_medium"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:id="@+id/checkBox3"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_skeleton_conner_small" />

                    <TextView
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_100"
                        android:layout_marginStart="@dimen/margin_small"
                        android:background="@drawable/bg_skeleton_conner_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_small"
                        android:padding="@dimen/margin_small">

                        <TextView
                            android:id="@+id/tvName3"
                            style="@style/TextViewBoldWrapContent"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_skeleton_conner_small" />

                        <TextView
                            android:id="@+id/tvAuthor3"
                            style="@style/TextViewNormalWrapContent"
                            android:layout_width="@dimen/dimen_150"
                            android:layout_below="@id/tvName3"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_skeleton_conner_small" />

                        <RelativeLayout
                            style="@style/LinearLayoutHorizontal"
                            android:layout_width="match_parent"
                            android:layout_alignParentBottom="true">

                            <RatingBar
                                android:id="@+id/ratingBar3"
                                style="@style/RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/margin_small" />

                            <TextView
                                android:id="@+id/tvPrice3"
                                style="@style/TextViewBoldWrapContent"
                                android:layout_width="@dimen/dimen_80"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/bg_skeleton_conner_small" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout3"
                android:orientation="horizontal">

                <View
                    style="@style/View"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:background="@color/colorSkeleton" />

                <LinearLayout
                    android:id="@+id/container4"
                    style="@style/LinearLayoutHorizontal"
                    android:layout_margin="@dimen/padding_medium"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:id="@+id/checkBox4"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_skeleton_conner_small" />

                    <TextView
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_100"
                        android:layout_marginStart="@dimen/margin_small"
                        android:background="@drawable/bg_skeleton_conner_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_small"
                        android:padding="@dimen/margin_small">

                        <TextView
                            android:id="@+id/tvName4"
                            style="@style/TextViewBoldWrapContent"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_skeleton_conner_small" />

                        <TextView
                            android:id="@+id/tvAuthor4"
                            style="@style/TextViewNormalWrapContent"
                            android:layout_width="@dimen/dimen_150"
                            android:layout_below="@id/tvName4"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_skeleton_conner_small" />

                        <RelativeLayout
                            style="@style/LinearLayoutHorizontal"
                            android:layout_width="match_parent"
                            android:layout_alignParentBottom="true">

                            <RatingBar
                                android:id="@+id/ratingBar4"
                                style="@style/RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/margin_small" />

                            <TextView
                                android:id="@+id/tvPrice4"
                                style="@style/TextViewBoldWrapContent"
                                android:layout_width="@dimen/dimen_80"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/bg_skeleton_conner_small" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                style="@style/LinearLayoutVertical"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_medium">

                <RelativeLayout style="@style/LinearLayoutVertical">

                    <TextView
                        style="@style/TextViewBoldWrapContent"
                        android:layout_width="@dimen/dimen_200"
                        android:background="@drawable/bg_skeleton_conner_small"
                        android:padding="@dimen/padding_small" />

                    <TextView
                        android:id="@+id/tvAmount"
                        style="@style/TextViewNormalWrapContent"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_skeleton_conner_small"
                        android:padding="@dimen/padding_small" />

                </RelativeLayout>

                <View
                    style="@style/View"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@color/colorSkeleton" />

                <TextView
                    android:id="@+id/btnNext"
                    style="@style/BookDetailButtonMatchWidth"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@drawable/bg_skeleton_conner_medium" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>