<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/shape_10_white"
    android:orientation="vertical"
    android:padding="@dimen/padding_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvShowColor"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvColor"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_weight="2"
            android:gravity="center"
            android:textAllCaps="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal">

        <com.apandroid.colorwheel.ColorWheel
            android:id="@+id/colorWheel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_200"
            android:layout_weight="3" />

        <com.apandroid.colorwheel.gradientseekbar.GradientSeekBar
            android:id="@+id/gradientSeekBar"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_200"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/btnOK"
        style="@style/ButtonInDialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:backgroundTint="@color/header"
        android:text="@string/text_ok"
        android:textColor="@color/colorWhite" />

</LinearLayout>