<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_30"
    android:layout_marginRight="@dimen/dimen_30"
    android:background="@drawable/shape_10_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgFinger"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/bg_finger"
        android:padding="@dimen/padding_medium"
        android:src="@drawable/ic_fingerprint" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/dialog_finger_auth"
        android:textColor="@color/colorTextPrimary" />

    <TextView
        android:id="@+id/btnPassCode"
        style="@style/ButtonInDialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginStart="0dp"
        android:backgroundTint="@color/colorAccent"
        android:elevation="@dimen/elevation_16dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_16sp"
        android:text="Pass Code" />

</LinearLayout>