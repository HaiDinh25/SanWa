<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutVertical"
    android:padding="@dimen/padding_medium">

    <LinearLayout style="@style/LinearLayoutHorizontal">

        <TextView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/button_height_medium"
            android:layout_height="@dimen/button_height_medium"
            android:layout_gravity="center"
            android:background="@drawable/bg_skeleton_conner_medium" />

        <TextView
            android:id="@+id/tvUserName"
            style="@style/TextViewBoldWrapContent"
            android:layout_width="@dimen/dimen_150"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_medium"
            android:background="@drawable/bg_skeleton_conner_small"
            android:padding="@dimen/padding_small" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvRequestTitle"
        style="@style/TextViewBoldWrapContent"
        android:layout_width="@dimen/dimen_300"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/bg_skeleton_conner_small" />

    <TextView
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/bg_skeleton_conner_medium" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/TextViewNormalWrapContent"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/bg_skeleton_conner_small" />

    <TextView
        android:id="@+id/tvStatus"
        style="@style/TextViewBoldWrapContent"
        android:layout_width="@dimen/dimen_100"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/bg_skeleton_conner_small" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/colorSkeleton" />

</LinearLayout>