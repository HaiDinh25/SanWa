<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/LinearLayoutVertical"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/rootView"
            style="@style/LinearLayoutVertical"
            android:padding="@dimen/padding_large">

            <TextView
                style="@style/TextViewBoldWrapContent"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/about_us_overview" />

            <TextView
                android:id="@+id/tvName"
                style="@style/TextViewNormalWrapContent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_large" />

            <TextView
                android:id="@+id/tvVersion"
                style="@style/TextViewBoldWrapContent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_medium"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tvDescription"
                style="@style/TextViewNormalWrapContent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/colorClickedAnim" />


            <TextView
                style="@style/TextViewBoldWrapContent"
                android:layout_marginTop="@dimen/margin_larger"
                android:text="@string/about_us_our_document" />

            <RelativeLayout
                style="@style/LinearLayoutHorizontal"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    style="@style/TextViewNormalWrapContent"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:text="@string/about_term" />

                <ImageView
                    android:id="@+id/btnTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/padding_medium"
                    android:src="@drawable/ic_more" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvTerm"
                style="@style/TextViewNormalWrapContent"
                android:padding="@dimen/padding_medium"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:background="@color/colorClickedAnim" />

            <RelativeLayout style="@style/LinearLayoutHorizontal">

                <TextView
                    style="@style/TextViewNormalWrapContent"
                    android:layout_width="match_parent"
                    android:padding="@dimen/padding_medium"
                    android:text="@string/about_privacy" />

                <ImageView
                    android:id="@+id/btnPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/padding_medium"
                    android:src="@drawable/ic_more" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvPrivacy"
                style="@style/TextViewNormalWrapContent"
                android:padding="@dimen/padding_medium"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

</layout>
