<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:orientation="horizontal"
    android:padding="@dimen/padding_medium">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_500"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_skeleton_conner_large" />

        <LinearLayout style="@style/LinearLayoutVertical">

            <TextView
                style="@style/TextViewBoldWrapContent"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_small"
                android:padding="@dimen/padding_small"
                android:background="@drawable/bg_skeleton_conner_medium" />

            <RelativeLayout
                style="@style/LinearLayoutHorizontal"
                android:layout_marginTop="@dimen/margin_small">

                <TextView
                    style="@style/TextViewBoldWrapContent"
                    android:layout_width="match_parent"
                    android:layout_toStartOf="@+id/ratingBar0"
                    android:background="@drawable/bg_skeleton_conner_small" />

                <RatingBar
                    android:id="@+id/ratingBar0"
                    style="@style/RatingBar"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/margin_larger"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_500"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_skeleton_conner_large" />

        <LinearLayout style="@style/LinearLayoutVertical">

            <TextView
                style="@style/TextViewBoldWrapContent"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_small"
                android:padding="@dimen/padding_small"
                android:background="@drawable/bg_skeleton_conner_medium" />

            <RelativeLayout
                style="@style/LinearLayoutHorizontal"
                android:layout_marginTop="@dimen/margin_small">

                <TextView
                    style="@style/TextViewBoldWrapContent"
                    android:layout_width="match_parent"
                    android:layout_toStartOf="@+id/ratingBar1"
                    android:background="@drawable/bg_skeleton_conner_small" />

                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="@style/RatingBar"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>